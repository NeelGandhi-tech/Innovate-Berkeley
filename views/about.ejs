<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About - Innovate @ Berkeley</title>
    <link rel="icon" type="image/png" href="/images/aez.png">
    <link rel="stylesheet" href="/css/about.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/images/logo.png" alt="Innovate Logo">
                innovate
            </div>
            <ul class="nav-links">
                <li><a href="/about" class="active">ABOUT</a></li>
                <li><a href="/conference">CONFERENCE</a></li>
                <!-- <li><a href="/challenge">CHALLENGE</a></li> -->
            </ul>
            <a href="#register" class="register-btn">REGISTER</a>
        </div>
    </nav>

    <!-- Mission Section -->
    <section class="mission-section">
        <div class="mission-content">
            <div class="mission-text fade-in">
                <h1>OUR MISSION</h1>
                <p class="mission-description">
                    Innovate@Berkeley is one of the biggest startup conferences in the Bay Area. 
                    We aim to capture the entrepreneurial spirit of Silicon Valley and provide a 
                    platform for our community to connect, learn, and get inspired.
                </p>
                <div class="mission-pillars">
                    <h2>INNOVATE IN THREE WORDS</h2>
                    <ul class="pillars-list">
                        <li>CONNECT</li>
                        <li>LEARN</li>
                        <li>INSPIRE</li>
                    </ul>
                </div>
            </div>
            <div class="mission-images fade-in">
                <div class="mission-photo"></div>
            </div>
        </div>
    </section>

    <!-- Years Gallery Section -->
    <section class="years-section">
        <div class="years-container">
            <h2 class="years-title">Innovate Through The Years</h2>
            <div class="carousel-container">
                <div class="carousel">
                    <div class="carousel-slide">
                        <h3 class="slide-title">Startup Summit 2023</h3>
                    </div>
                </div>
                <button class="carousel-nav prev" onclick="previousSlide()">‹</button>
                <button class="carousel-nav next" onclick="nextSlide()">›</button>
                <div class="carousel-indicators">
                    <div class="indicator active"></div>
                    <div class="indicator"></div>
                    <div class="indicator"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Organizers Section -->
    <section class="organizers-section">
        <div class="organizers-container">
            <h2 class="organizers-title">Meet the Organizers</h2>
            <div class="organizer-content">
                <div class="organizer-logo-section fade-in">
                    <div class="organizer-logo">
                        <img src="/images/aez.png" alt="AEZ Logo">
                    </div>
                </div>
                <div class="organizer-info fade-in">
                    <h3>Alpha Epsilon Zeta</h3>
                    <p>
                        Innovate@Berkeley is organized by the brothers of Alpha Epsilon 
                        Zeta (AEZ). AEZ distinguishes itself from professional fraternities 
                        by embracing a multidisciplinary focus, dedicated to promoting and 
                        fostering professionalism, brotherhood, unity and tradition.
                    </p>
                    <div class="past-events">
                        <h4>Past Events Include:</h4>
                        <ul>
                            <li>Stock market competitions</li>
                            <li>Case competitions</li>
                            <li>Startup workshops</li>
                            <li>Company talks</li>
                            <li>Career panels</li>
                        </ul>
                    </div>
                    <button class="learn-more-btn">Learn More</button>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 100) {
                navbar.style.background = 'rgba(26, 26, 46, 0.8)';
            } else {
                navbar.style.background = 'rgba(26, 26, 46, 0.3)';
            }
        });

        // Carousel functionality
        let currentSlide = 0;
        const slides = ['Startup Summit 2023', 'Innovation Expo 2022', 'Tech Meetup 2021'];

        function updateSlide() {
            const slideElement = document.querySelector('.slide-title');
            const carouselElement = document.querySelector('.carousel-slide');
            
            // Add rolling transition effect
            carouselElement.classList.add('transitioning');
            
            setTimeout(() => {
                slideElement.textContent = slides[currentSlide];
                
                // Update background image with rolling effect
                carouselElement.className = 'carousel-slide';
                if (currentSlide === 1) {
                    carouselElement.classList.add('slide-2');
                } else if (currentSlide === 2) {
                    carouselElement.classList.add('slide-3');
                }
                
                // Remove transition effect with rolling motion
                setTimeout(() => {
                    carouselElement.classList.remove('transitioning');
                }, 300);
            }, 750);
            
            // Update indicators
            document.querySelectorAll('.indicator').forEach((indicator, index) => {
                indicator.classList.toggle('active', index === currentSlide);
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides.length;
            updateSlide();
        }

        function previousSlide() {
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            updateSlide();
        }

        // Auto-advance carousel
        setInterval(nextSlide, 5000);

        // Trigger animations on page load
        window.addEventListener('load', () => {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach((el, index) => {
                setTimeout(() => {
                    el.style.animationPlayState = 'running';
                }, index * 200);
            });
        });

        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.querySelectorAll('.organizer-logo-section, .organizer-info').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });
    </script>
</body>
</html>
